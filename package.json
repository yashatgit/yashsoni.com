{
  "name": "yashsoni.com",
  "description": "My personal website.",
  "version": "0.0.0",
  "author": {
    "name": "Yash Soni",
    "email": "mailme@yashsoni.com",
    "url": "https://yashsoni.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashatgit/yashsoni.com.git"
  },
  "files": [
    "components",
    "data",
    "icons",
    "lib",
    "pages",
    "public",
    "styles",
    "utils"
  ],
  "scripts": {
    "build": "next build",
    "export": "yarn build && next export",
    "dev": "next",
    "imageoptim": "yarn imageoptim:gif && yarn imageoptim:jpg && yarn imageoptim:png",
    "imageoptim:gif": "imageoptim \"public/**/*.gif\"",
    "imageoptim:jpg": "imageoptim \"public/**/*.jpg\"",
    "imageoptim:png": "imageoptim --no-imageoptim --imagealpha \"public/**/*.png\"",
    "lint": "eslint . --ext .json --ext .js",
    "prettier": "prettier --write \"**/*.{html,js,json,md,mdx,mjs,yml}\"",
    "start": "next start",
    "test": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,js,json,md,mdx,mjs,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.gif": [
      "imageoptim",
      "git add"
    ],
    "*.jpg": [
      "imageoptim",
      "git add"
    ],
    "*.png": [
      "imageoptim --no-imageoptim --imagealpha",
      "git add"
    ]
  },
  "dependencies": {
    "@mapbox/rehype-prism": "0.4.0",
    "@mdx-js/react": "1.5.5",
    "comma-number": "2.0.1",
    "date-fns": "1.30.1",
    "fs-extra": "8.1.0",
    "image-size": "0.8.3",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.3.0",
    "next-seo": "4.4.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-images": "1.1.0",
    "react-photo-gallery": "8.0.0",
    "react-syntax-highlighter": "12.2.1",
    "styled-components": "5.0.0",
    "styled-reset": "4.1.0",
    "title": "3.4.1",
    "use-dark-mode": "2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@mdx-js/loader": "1.5.7",
    "@next/mdx": "9.3.0",
    "babel-plugin-inline-react-svg": "1.1.1",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "globby": "11.0.0",
    "husky": "3.0.9",
    "imageoptim-cli": "3.0.2",
    "lint-staged": "9.4.2",
    "listr": "0.14.3",
    "prettier": "1.19.1"
  }
}
